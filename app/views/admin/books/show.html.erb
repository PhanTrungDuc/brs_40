<% provide :title, @book.title %>

<div class="row row-button col-md-offset-9">
  <%= link_to t("views.books.show_delete"), admin_category_book_path(@category, @book), method: :delete,
    class: "btn btn-default", data: {confirm: t("views.books.confirm")} %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4 book_image">
      <div class="row">
        <% if @book.cover? %>
          <%= image_tag @book.cover.url, class: "center-block" %>
        <% else %>
          <%= link_to image_tag("coverdefault.jpg", class: "center-block"), @book %>
        <% end %>
        <div class="col-md-offset-4">
          <%= t "admin.book.number_page" %>
          <%= @book.number_of_page %>
        </div>
      </div>
      <div class="row">
      </div>
    </div>
    <div class="col-md-8">
      <h2>
        <%= link_to @book.title, "#" %>
      </h2>
      <label><%= t "views.books.author" %></label>
      <%= @book.author %></br>
      <label><%= t "views.books.description" %></label></br>
      <%= @book.description %>
    </div>
  </div>
</div>
