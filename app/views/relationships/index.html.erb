<h1><%= t "views.relationship.following" %></h1>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h2><%= @user.name %></h2>
      <span><%= link_to t("users.profile"), @user %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <li>
            <%= gravatar_for @user %>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
