<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="search-form">
      <%= form_tag books_path, method: :get do %>
        <%= text_field_tag :search, params[:search],
          placeholder: t("views.search.title"), class: "form-control",
          value: nil %>
        <%= submit_tag t("views.search.submit"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
        <p class="search"><%= t "views.search.results" %></p>
        <% @books.each do |book| %>
          <div class="thumbnail">
            <div class="row">
              <div class="col-md-5"><%= book.author %></div>
            </div>
            <%= book.title %>
            <%= link_to image_tag(book.cover.url, size: Settings.size_book),
              book %>
            <%= book.description %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
